generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model People {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    firstName   String
    lastName    String
    email       String
    homeAddress String?
    age         String?
    contact     String?
    section     String?
    adviser     String?
    password    String
    role        Int
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model Facephotos {
    id             String   @id @default(auto()) @map("_id") @db.ObjectId
    owner          String
    photoPublicId  String
    photoUrl       String
    faceDescriptor String
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
}

model Attendance {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    isOn      Boolean
    date      String
    time      String
    teacher   String
    event     String
    section   String
    students  Json?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Status {
    id             String   @id @default(auto()) @map("_id") @db.ObjectId
    attendance     String
    studentId      String
    status         String
    letterUrl      String
    letterPublicId String
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
}

